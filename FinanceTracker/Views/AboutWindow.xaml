<Window x:Class="FinanceTracker.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:res="clr-namespace:FinanceTracker.Resources"
        Title="{x:Static res:AppResources.Menu_About}"
        ResizeMode="NoResize"
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}"
        Foreground="{DynamicResource AppForeground}">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <!-- Application name -->
            <TextBlock Text="Finance Tracker" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <!-- Version text, set in code-behind -->
            <TextBlock x:Name="VersionText" HorizontalAlignment="Center" Margin="0,0,0,5"/>

            <!-- Creator / author info -->
            <TextBlock Text="{x:Static res:AppResources.Title_CreatedBy}" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Button to open GitHub page -->
            <Button Content="{x:Static res:AppResources.Button_OpenGithub}" Width="200" HorizontalAlignment="Center" Click="OpenGitHub_Click" Background="{DynamicResource AccentBrush}" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>