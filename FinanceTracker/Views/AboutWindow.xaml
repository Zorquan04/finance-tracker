<Window x:Class="FinanceTracker.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About"
        ResizeMode="NoResize"
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackground}"
        Foreground="{DynamicResource AppForeground}">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Finance Tracker" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock x:Name="VersionText" HorizontalAlignment="Center" Margin="0,0,0,5"/>

            <TextBlock Text="Created by Kacper / Zorquan04" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Button Content="Open GitHub" Width="200" HorizontalAlignment="Center" Click="OpenGitHub_Click" Background="{DynamicResource AccentBrush}" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>